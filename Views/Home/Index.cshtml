@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <div class="jumbotron text-center mt-4">
        <h1 class="display-4">Welcome to the Contract Monthly Claim System</h1>
        <p class="lead">Manage your claims with ease and transparency.</p>
        <hr class="my-4">
        <p>Select an option below to get started.</p>
    </div>

    <div class="row text-center">
        <!-- Submit Claim -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Submit a Claim</h5>
                    <p class="card-text">Submit your contract claims easily with all necessary documents.</p>
                    <a href="#" class="btn btn-primary">Submit Claim</a>
                </div>
            </div>
        </div>

        <!-- Track Claim -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Track Your Claim</h5>
                    <p class="card-text">Follow the status of your submitted claims until settlement.</p>
                    <a href="#" class="btn btn-secondary">Track Claim</a>
                </div>
            </div>
        </div>

        <!-- Verify/Approve Claims -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Verify and Approve Claims</h5>
                    <p class="card-text">Program Coordinators and Managers can verify and approve claims here.</p>
                    <a href="#" class="btn btn-success">Verify/Approve Claims</a>
                </div>
            </div>
        </div>
    </div>
</div>
