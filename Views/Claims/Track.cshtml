@model IEnumerable<ContractMonthlyClaimSystem.Models.Claim>


<h2>Your Claims</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Claim Date</th>
            <th>Amount</th>
            <th>Status</th>
            <th>Supporting Document</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.ClaimDate.ToShortDateString()</td>
                <td>@claim.Amount.ToString("C")</td>
                <td>@claim.Status</td>
                <td>
                    @if (!string.IsNullOrEmpty(claim.SupportingDocumentPath))
                    {
                        <a href="@claim.SupportingDocumentPath" target="_blank">View Document</a>
                    }
                    else
                    {
                        <span>No Document</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
