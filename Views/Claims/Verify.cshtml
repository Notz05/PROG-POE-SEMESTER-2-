@model ContractMonthlyClaimSystem.Models.Claim

<h2>Verify Claim</h2>

<p><strong>Lecturer Name:</strong> @Model.LecturerName</p>
<p><strong>Claim Date:</strong> @Model.ClaimDate.ToShortDateString()</p>
<p><strong>Amount:</strong> @Model.Amount.ToString("C")</p>
<p><strong>Status:</strong> @Model.Status</p>

<form method="post">
    <button type="submit" class="btn btn-success">Approve</button>
    <button type="submit" class="btn btn-danger">Reject</button>
</form>
