@model ContractMonthlyClaimSystem.Models.ClaimViewModel

<h2>Claim Details</h2>

<p><strong>Lecturer Name:</strong> @Model.ClaimDetails.LecturerName</p>
<p><strong>Claim Date:</strong> @Model.ClaimDetails.ClaimDate.ToShortDateString()</p>
<p><strong>Amount:</strong> @Model.ClaimDetails.Amount.ToString("C")</p>
<p><strong>Status:</strong> @Model.ClaimDetails.Status</p>
